<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/current_film_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:background="@drawable/ic_loading_element"
            android:baselineAlignBottom="false"
            android:contentDescription="poster"
            android:cropToPadding="false"
            android:scaleType="fitEnd" />
    </FrameLayout>

    <TextView
        android:id="@+id/name_current_film"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="top|center"
        android:text="@string/name_film"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_current_film"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="left"
        android:text="@string/desctiption_film"
        android:textSize="18sp" />
</LinearLayout>